{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["esnext", "es2019.array", "dom", "esnext.intl", "es2017.intl", "es2018.intl"],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true
  },
  "include": ["./typings", "./src", "./storybook"],
  "exclude": ["node_modules", "android", "ios", "build", "babel.config.js", "metro.config.js", "App.js", "src/api"]
}
